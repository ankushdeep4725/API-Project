    <script>
        $(document).ready(function () {

            var trow = $(".hideMe");
            setTimeout(function () {
                trow.fadeOut();
            }, 3000);


            $("#faqSelect").change(function () {
                var val = $(this).val();

                if (val == "")
                {
                    $("#question").val("");
                    $("#answer").val("");
                    return false;
                }
                $.ajax({
                    url: '/Admin/FAQ',
                    type: "POST",
                    data: { id: val },
                    success: function (data) {
                        console.log(data);
                        $("#hdnid").val(data.id);
                        $("#question").val(data.question);
                        $("#answer").val(data.answer);
                    },
                    statusCode: {
                        404: function (content) { alert('cannot find resource'); },
                        500: function (content) { alert('internal server error'); }
                    },
                    error: function (req, status, errorObj) {
                        // handle status === "timeout"
                        // handle other errors
                    }
                });
            });


            $("form").submit(function () {
                var id = $("#hdnid").val();
                var question = $("#question").val();
                var answer = $("#answer").val();
                if (id == "") {
                    $("#question").val("");
                    $("#answer").val("");
                    return false;
                }
                $.ajax({
                    url: '/Admin/UpdateFAQ',
                    type: "POST",
                    data: { id: id, question:question, answer: answer},
                    success: function (data) {
                        if (data) {
                            location.href = "/Admin/FAQ";
                        }
                    },
                    statusCode: {
                        404: function (content) { alert('cannot find resource'); },
                        500: function (content) { alert('internal server error'); }
                    },
                    error: function (req, status, errorObj) {
                        // handle status === "timeout"
                        // handle other errors
                    }
                });
            });


        });
